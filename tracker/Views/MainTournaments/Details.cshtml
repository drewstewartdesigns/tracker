@model IEnumerable<tracker.ViewModels.TournamentsViewModel>

@{
    ViewBag.Title = "Relentless Ones Tournament Details";
}

<div class="row">
    <div class="col-md-12">
        <p style="margin-top: 20px;">
            @Html.ActionLink("Back to Tournaments", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <h2>@Html.DisplayFor(model => model.FirstOrDefault().TournamentName) <small>details</small></h2>
        <p>@Html.DisplayFor(model => model.FirstOrDefault().Rank)</p>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PlayerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsFor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PointsAgainst)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.OrderByDescending(x => x.TournamentID))
            {
                <tr class="details-row">
                    <td>
                        @Html.ActionLink(item.PlayerName, "Details", "MainPlayers", new { id = item.PlayerID }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointsFor)
                        <p class="missed-drives @(item.MissedDrives.GetValueOrDefault() || item.PointsFor == null ? "" : "hidden") ">
                            Missed Drives
                        </p>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PointsAgainst)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "MainTournamentScores", new {id = item.TournamentScoresID}, new {@class="btn btn-sm btn-default"})
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <p style="margin-top: 20px;">
            @Html.ActionLink("Back to Tournaments", "Index", null, new { @class = "btn btn-default" })
        </p>
    </div>
</div>

